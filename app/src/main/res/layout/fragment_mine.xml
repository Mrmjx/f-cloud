<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_color_f2f2f2"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/mine_head_bg"
    android:gravity="center"
    >
    <com.menhai.fcloud.view.CircleImageView
        android:id="@+id/mycircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/common_tran"
        android:src="@mipmap/mine_icon_default"
        app:border_width="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="章子怡"
        android:textSize="18sp"
        android:textColor="@color/common_while"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13549156455"
        android:textSize="18sp"
        android:textColor="@color/common_while"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/common_while">
        <FrameLayout
            android:id="@+id/mine_person_setting_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人设置"
                android:drawableLeft="@mipmap/mine_icon_setting"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳门海安全技术有限公司"
                android:drawableLeft="@mipmap/mine_icon_company"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:drawableLeft="@mipmap/mine_icon_change_password"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户管理"
                android:drawableLeft="@mipmap/mine_icon_account_manage"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:drawableLeft="@mipmap/mine_icon_clear_cache"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mine_item_layout_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于FCLOUD"
                android:drawableLeft="@mipmap/mine_icon_about_us"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/common_color_666666"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_rigth_icon_click_def"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_color_e5e5e5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="退出登录"
        android:textColor="@color/common_while"
        android:textSize="15sp"
        android:background="@drawable/mine_blue_corner_no_stroke_shape"/>

</LinearLayout>
    </ScrollView>

